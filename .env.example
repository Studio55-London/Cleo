# ============================================================================
# CLEO CONFIGURATION
# ============================================================================
# Copy this file to .env and update with your actual credentials

# ============================================================================
# CLAUDE API
# ============================================================================
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-claude-api-key-here

# Claude model to use (default: claude-sonnet-4)
CLAUDE_MODEL=claude-sonnet-4

# ============================================================================
# MICROSOFT GRAPH API
# ============================================================================
# Azure App Registration credentials
# Setup: portal.azure.com → App registrations → New registration
AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-client-id-here
AZURE_CLIENT_SECRET=your-client-secret-here

# ============================================================================
# TODOIST INTEGRATION
# ============================================================================
# Get your API token from: https://todoist.com/app/settings/integrations/developer
TODOIST_API_TOKEN=your-todoist-token-here

# ============================================================================
# TELEGRAM BOT
# ============================================================================
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# ============================================================================
# DATABASE
# ============================================================================
# SQLite database path
DATABASE_PATH=data/cleo.db

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
# Flask secret key (generate a random string)
SECRET_KEY=your-secret-key-change-in-production

# Environment (development, staging, production)
ENVIRONMENT=development

# Flask host and port
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Debug mode (True/False)
DEBUG=True

# ============================================================================
# LOGGING
# ============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=data/cleo.log
